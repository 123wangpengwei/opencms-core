<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE opencms SYSTEM "http://www.opencms.org/dtd/6.0/opencms-vfs.dtd">

<opencms>	
	<vfs>
		<resources>
			<resourceloaders>
				<loader class="com.opencms.legacy.CmsXmlTemplateLoader" />
				<loader class="org.opencms.loader.CmsDumpLoader" />
				<loader class="org.opencms.loader.CmsPointerLoader" />
				<loader class="org.opencms.loader.CmsJspLoader" />
				<loader class="org.opencms.loader.CmsXmlPageLoader" />
				<loader class="org.opencms.loader.CmsXmlContentLoader" />
			</resourceloaders>
			<resourcetypes>
				<type class="com.opencms.legacy.CmsResourceTypeXMLTemplate" />
				<type class="org.opencms.file.types.CmsResourceTypeFolder" />
				<type class="org.opencms.file.types.CmsResourceTypePlain" >
					<mapping suffix=".txt" />
					<mapping suffix=".html" />
					<mapping suffix=".htm" />
				</type>
				<type class="org.opencms.file.types.CmsResourceTypePointer" />
				<type class="org.opencms.file.types.CmsResourceTypeBinary">
					<mapping suffix=".pdf" />
					<mapping suffix=".zip" />
					<mapping suffix=".class" />
					<mapping suffix=".ppt" />
					<mapping suffix=".doc" />
					<mapping suffix=".xls" />
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeImage">
					<mapping suffix=".jpeg" />
					<mapping suffix=".jpg" />
					<mapping suffix=".gif" />
					<mapping suffix=".png" />
					<mapping suffix=".tif" />
					<mapping suffix=".tiff" />
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeJsp">
					<mapping suffix=".jsp" />
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeXmlPage" />
				<type class="org.opencms.file.types.CmsResourceTypeXmlContent">
					<param name="resource.type.id">11</param>
					<param name="resource.type.name">xmlcontent</param>
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeGallery">
					<param name="gallery.class">org.opencms.workplace.commons.CmsGalleryImages</param>
					<param name="resource.type.id">15</param>
					<param name="resource.type.name">imagegallery</param>
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeGallery">
					<param name="gallery.class">org.opencms.workplace.commons.CmsGalleryLinks</param>
					<param name="resource.type.id">16</param>
					<param name="resource.type.name">linkgallery</param>
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeGallery">
					<param name="gallery.class">org.opencms.workplace.commons.CmsGalleryHtmls</param>
					<param name="resource.type.id">17</param>
					<param name="resource.type.name">htmlgallery</param>
				</type>
				<type class="org.opencms.file.types.CmsResourceTypeGallery">
					<param name="gallery.class">org.opencms.workplace.commons.CmsGalleryDownloads</param>
					<param name="resource.type.id">18</param>
					<param name="resource.type.name">downloadgallery</param>
				</type>					
			</resourcetypes>
			<collectors>
				<collector class="org.opencms.file.CmsDefaultResourceCollector" order="100" />
			</collectors>		
		</resources>
		<defaultfiles>
			<defaultfile name="index.html" />
			<defaultfile name="index.jsp" />
		</defaultfiles>
		<translations>
			<filetranslations enabled="true">
				<translation>s#[\s]+#_#g</translation>
				<translation>s#\\#/#g</translation>
				<translation>s#[^0-9a-zA-Z_\.\-\/]#!#g</translation>
				<translation>s#!+#x#g</translation>
			</filetranslations>
			<foldertranslations enabled="false"/>
		</translations>
		<xmlcontent>
			<widgets>
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlBooleanWidget" alias="BooleanWidget" />
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlColorpickerWidget" alias="ColorpickerWidget" />
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlDateTimeWidget" alias="DateTimeWidget" />
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlHtmlWidget" alias="HtmlWidget" />
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlStringWidget" alias="StringWidget" />
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlVfsFileWidget" alias="VfsFileWidget" />			
				<widget class="org.opencms.workplace.xmlwidgets.CmsXmlVfsImageWidget" alias="VfsImageWidget" /> 	
			</widgets>
			<schematypes>
				<schematype class="org.opencms.xml.types.CmsXmlBooleanValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlBooleanWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlColorValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlColorpickerWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlDateTimeValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlDateTimeWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlHtmlValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlHtmlWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlLocaleValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlStringWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlStringValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlStringWidget" />
				<schematype class="org.opencms.xml.types.CmsXmlVfsFileValue" defaultwidget="org.opencms.workplace.xmlwidgets.CmsXmlVfsFileWidget" />
			</schematypes>
		</xmlcontent>
	</vfs>
</opencms>