<?xml version="1.0" encoding="ISO-8859-1"?>
<registry>
	<system>
		
		<!-- workplace -->		
		<synchronizemodifications />
		<checklink>
			<mailfrom>nobody@nowhere.com</mailfrom>
			<mailto>nobody@nowhere.com</mailto>
			<mailtemplate>/system/workplace/templates/urlcheckform</mailtemplate>
		</checklink>
		

		<!-- scheduler (new) -->
		<crontab>
			<!--
		    <cronjob>
		    	<min>*</min>
		        <hour>*</hour>
		        <dayofmonth>*</dayofmonth>
		        <month>*</month>
		        <dayofweek>*</dayofweek>
				<class>org.opencms.monitor.CmsMemoryMonitor</class>
		        <user>cmsadmin</user>
				<group>cmsadministrators</group>
				<params></params>
		    </cronjob>
			//-->
		</crontab>


		<!-- search (new) -->
		<search>
            <directory>index</directory>
            <mergefactor>100000</mergefactor>
            <timeout>60000</timeout>
            <cosindexer>com.opencms.legacy.CmsCosIndexer</cosindexer>
            <vfsindexer>org.opencms.search.CmsVfsIndexer</vfsindexer>
            <documenttype>
                <name>xmlpage</name>
				<class>org.opencms.search.documents.CmsXmlPageDocument</class>
				<resourcetype>org.opencms.file.types.CmsResourceTypeXmlPage</resourcetype>
				<mimetype>text/html</mimetype>
            </documenttype>
            <documenttype>
			    <name>text</name>
			    <class>org.opencms.search.documents.CmsTextDocument</class>
			    <resourcetype>org.opencms.file.types.CmsResourceTypePlain</resourcetype>
                <mimetype>text/html</mimetype>
            </documenttype>
            <documenttype>
                <name>jsp</name>
                <class>org.opencms.search.documents.CmsTextDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypeJsp</resourcetype>
            </documenttype>
            <documenttype>
                <name>pdf</name>
                <class>org.opencms.search.documents.CmsPdfDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypeBinary</resourcetype>
                <resourcetype>org.opencms.file.types.CmsResourceTypePlain</resourcetype>
                <mimetype>application/pdf</mimetype>
            </documenttype>
            <documenttype>
                <name>msword</name>
                <class>org.opencms.search.documents.CmsWordDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypeBinary</resourcetype>
                <resourcetype>org.opencms.file.types.CmsResourceTypePlain</resourcetype>
                <mimetype>application/msword</mimetype>
            </documenttype>
            <documenttype>
                <name>msexcel</name>
                <class>org.opencms.search.documents.CmsExcelDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypeBinary</resourcetype>
                <resourcetype>org.opencms.file.types.CmsResourceTypePlain</resourcetype>
                <mimetype>application/vnd.ms-excel</mimetype>
            </documenttype>
            <documenttype>
                <name>image</name>
                <class>org.opencms.search.documents.CmsVfsDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypeImage</resourcetype>
            </documenttype>
            <documenttype>
                <name>generic</name>
                <class>org.opencms.search.documents.CmsVfsDocument</class>
                <resourcetype>org.opencms.file.types.CmsResourceTypePlain</resourcetype>
            </documenttype>
            <analyzer>
                <class>org.apache.lucene.analysis.de.GermanAnalyzer</class>
                <lang>de</lang>
            </analyzer>
            <analyzer>
                <class>org.apache.lucene.analysis.standard.StandardAnalyzer</class>
                <lang>en</lang>
            </analyzer>
            <analyzer>
                <class>org.apache.lucene.analysis.snowball.SnowballAnalyzer</class>
                <param>French</param>
                <lang>fr</lang>
            </analyzer>
            <analyzer>
                <class>org.apache.lucene.analysis.snowball.SnowballAnalyzer</class>
                <param>Italian</param>
                <lang>it</lang>
            </analyzer>
            <index>
                <name>Online project</name>
                <rebuild>auto</rebuild>
                <project>Online</project>
                <site>/sites/default/</site>
                <lang>en</lang>
                <folder>
                	<source>/</source>
                	<documenttype>xmlpage</documenttype>
                	<documenttype>page</documenttype>
                	<documenttype>text</documenttype>
                	<documenttype>pdf</documenttype>
                	<documenttype>msword</documenttype>
                	<documenttype>msexcel</documenttype>
                	<documenttype>image</documenttype>
                	<documenttype>generic</documenttype>
                 </folder>
            </index>
            <index>
                <name>Offline project</name>
                <rebuild>auto</rebuild>
                <project>Offline</project>
                <site>/sites/default/</site>
                <lang>en</lang>
                <folder>
                	<source>/</source>
                	<documenttype>xmlpage</documenttype>
                	<documenttype>page</documenttype>
                	<documenttype>text</documenttype>
                	<documenttype>pdf</documenttype>
                	<documenttype>msword</documenttype>
                	<documenttype>msexcel</documenttype>
                	<documenttype>image</documenttype>
                	<documenttype>generic</documenttype>
                 </folder>
            </index>
            <index>
                <name>System folder</name>
                <rebuild>auto</rebuild>
                <project>Online</project>
                <site>/</site>
                <lang>en</lang>
                <folder>
                	<source>/system/</source>
                	<documenttype>xmlpage</documenttype>
                	<documenttype>page</documenttype>
                	<documenttype>text</documenttype>
                	<documenttype>jsp</documenttype>
                	<documenttype>generic</documenttype>
               	</folder>                
            </index>
        </search>
		@REGISTRY_CONFIGURATION@
	</system>
	<modules/>
</registry>
