<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui">
	<ui:with field="constants" type="org.opencms.gwt.client.ui.css.I_CmsConstantsBundle" />
	<ui:style>
		.tooltip {
			z-index: 200000;
			position: absolute;
			width: 400px;
			border-radius: 4px;
			padding-top: 7px;
			padding-bottom: 5px;
			padding-left: 7px;
			padding-right: 5px; 
			background-color: #FFFFCC;
			box-shadow: 2px 2px 2px #666666;
		} 

		.tooltip .label {
			font-family: "Open Sans", sans-serif;
            font-size: 14px;
            font-weight: 400;
            color: #474747;
		}
		
		.tooltip .arrow {
			height: 10px;
			width: 10px;
			position: absolute;
			left: literal("calc(2 * 100% / 3 - 3px)");
			top: -5px;
			transform: rotate(45deg);
			background: #FFFFCC;
		}
		
		.tooltip .label > p {
			margin-left: 0px;
			margin-right: 0px;
			margin-top: 0px;
			margin-bottom: 5px; 
		}
		
		.tooltip .label > p:last-child {
			margin-bottom: 0px;
		}
	
	</ui:style>
	<g:FlowPanel addStyleNames="{style.tooltip}">
		<g:Label addStyleNames="{style.arrow}" />
		<g:HTML addStyleNames="{style.label}" ui:field="m_label"></g:HTML>
	</g:FlowPanel>
</ui:UiBinder> 