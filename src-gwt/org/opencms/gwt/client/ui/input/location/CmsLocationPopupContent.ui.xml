<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui.input">
	<ui:style>
		div.mainPanel div.mapCanvas, div.mainPanel div.fields{
			float: left;
			height: 400px;
			width: 600px;
		}
		div.fields > p{
			margin:5px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="m_panel" styleName="{style.mainPanel}">
		<div ui:field="m_mapCanvas" class="{style.mapCanvas}"></div>
		<div  class="{style.fields}">
			<p><g:Label ui:field="m_addressLabel" /><cms:CmsSuggestBox ui:field="m_addressField" /></p>
			<p><g:Label ui:field="m_longitudeLabel" /><cms:CmsTextBox ui:field="m_longitudeField" /></p>
			<p><g:Label ui:field="m_latitudeLabel" /><cms:CmsTextBox ui:field="m_latitudeField" /></p>
			<p><g:Label ui:field="m_sizeLabel" /><cms:CmsTextBox ui:field="m_widthField" />&nbsp;x&nbsp;<cms:CmsTextBox ui:field="m_heightField" /></p>
			<p><g:Label ui:field="m_zoomLabel" /><cms:CmsTextBox ui:field="m_zoomField" /></p>
			<p><g:Label ui:field="m_typeLabel" /><cms:CmsTextBox ui:field="m_typeField" /></p>
			<p><g:Label ui:field="m_modeLabel" /><cms:CmsTextBox ui:field="m_modeField" /></p>
		</div>
		<div style="clear:both; height:0px;"></div>
	</g:HTMLPanel>
</ui:UiBinder> 