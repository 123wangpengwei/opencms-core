<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui.input">
	<ui:with field="main" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	<g:HTMLPanel ui:field="m_panel" styleName="{main.locationPickerCss.mainPanel} {main.generalCss.clearFix}">
		<div ui:field="m_mapCanvas" class="{main.locationPickerCss.mapCanvas}"></div>
		<div  class="{main.locationPickerCss.fields}">
			<p><g:Label ui:field="m_addressLabel" /><cms:CmsSuggestBox ui:field="m_addressField" /></p>
			<p><g:Label ui:field="m_longitudeLabel" /><cms:CmsTextBox ui:field="m_longitudeField" /></p>
			<p><g:Label ui:field="m_latitudeLabel" /><cms:CmsTextBox ui:field="m_latitudeField" /></p>
			<p><g:Label ui:field="m_sizeLabel" /><cms:CmsTextBox ui:field="m_widthField" addStyleNames="{main.locationPickerCss.inlineField}" />&nbsp;x&nbsp;<cms:CmsTextBox ui:field="m_heightField" addStyleNames="{main.locationPickerCss.inlineField}" /></p>
			<p><g:Label ui:field="m_zoomLabel" /><cms:CmsSelectBox ui:field="m_zoomField" /></p>
			<p><g:Label ui:field="m_typeLabel" /><cms:CmsSelectBox ui:field="m_typeField" /></p>
			<p><g:Label ui:field="m_modeLabel" /><cms:CmsSelectBox ui:field="m_modeField" /></p>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 