<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd"/>	
	<xsd:element name="T3ItemImages" type="OpenCmsT3ItemImages"/>
	
	<xsd:complexType name="OpenCmsT3ItemImages">
		<xsd:sequence>
			<xsd:element name="T3ItemImage" type="OpenCmsT3ItemImage" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="OpenCmsT3ItemImage">
		<xsd:sequence>
			<xsd:element name="Image" type="OpenCmsVfsFile" />
			<xsd:element name="Description" type="OpenCmsString" minOccurs="0" />
		</xsd:sequence>
		<xsd:attribute name="language" type="OpenCmsLocale" use="optional"/>
	</xsd:complexType>

	<xsd:annotation>
		<xsd:appinfo>
			<resourcebundle name="org.opencms.frontend.template3.demo.workplace"/>
			<layouts>
				<layout element="Image" widget="ImageGalleryWidget" configuration="{useformat:true}" />			
			</layouts>
			<relations>
				<relation element="Image" invalidate="false" type="strong" />
			</relations>
		</xsd:appinfo>
	</xsd:annotation>  
</xsd:schema>