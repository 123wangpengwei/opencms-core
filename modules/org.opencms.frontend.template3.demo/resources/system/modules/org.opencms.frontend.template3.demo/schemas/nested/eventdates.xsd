<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd"/>
		
	<xsd:element name="T3EventDates" type="OpenCmsT3EventDates"/>
	
	<xsd:complexType name="OpenCmsT3EventDates">
		<xsd:sequence>
			<xsd:element name="T3EventDate" type="OpenCmsT3EventDate" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="OpenCmsT3EventDate">
		<xsd:sequence>
			<xsd:element name="EventDate" type="OpenCmsDateTime" />
			<xsd:element name="EventEndDate" type="OpenCmsDateTime" minOccurs="0" />
			<xsd:element name="ShowTime" type="OpenCmsBoolean" minOccurs="0" />	
			<xsd:element name="DateRemark" type="OpenCmsString" minOccurs="0" />		
		</xsd:sequence>
		<xsd:attribute name="language" type="OpenCmsLocale" use="optional"/>
	</xsd:complexType>

	<xsd:annotation>
		<xsd:appinfo>
			<resourcebundle name="org.opencms.frontend.template3.demo.workplace"/>		
			<layouts>
				<layout element="DateRemark" widget="TextareaWidget" />
			</layouts>
		</xsd:appinfo>
	</xsd:annotation>  
</xsd:schema>