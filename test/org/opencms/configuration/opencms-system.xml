<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE opencms SYSTEM "http://www.opencms.org/dtd/6.0/opencms-system.dtd">

<opencms>
	<system>
	   	<internationalization> 	
			<localehandler class="org.opencms.i18n.CmsDefaultLocaleHandler"/>	
			<localesconfigured>
				<locale>en</locale>
				<locale>de</locale>
			</localesconfigured>
			<localesdefault>
				<locale>en</locale>
				<locale>de</locale>		
			</localesdefault>
		</internationalization>
		<mail>
			<mailfrom>nobody@nowhere.com</mailfrom>
			<mailhost name="my.smtp.server" order="10" protocol="smtp" user="username" password="secure"/>
			<mailhost name="alternative.smtp.server" order="20" protocol="smtp"/>
			<mailhost name="another.alternative.smtp.server" order="30" protocol="smtp"/>
		</mail>
		<scheduler>
			<job>
				<name>Test job name</name>
				<class>org.opencms.scheduler.TestScheduledJob</class>
				<reuseinstance>false</reuseinstance>
				<cronexpression><![CDATA[0/2 * * * * ?]]></cronexpression>
				<context>
					<user>Admin</user>
					<project>Offline</project>
					<siteroot>/sites/default</siteroot>
					<requesteduri>/index.html</requesteduri>
					<locale>en</locale>
					<encoding>UTF-8</encoding>
					<remoteaddr>127.0.0.1</remoteaddr>
				</context>
				<parameters>
					<param name="param1">value1</param>
					<param name="param2">value2</param>
				</parameters>
			</job>
		</scheduler>			
	   	<versionhistory enabled="true" count="10"/>
		<resourceinit>
			<resourceinithandler class="org.opencms.configuration.CmsTestDummyResourceInit" />
		</resourceinit>
		<requesthandlers/>
	</system>
</opencms>    