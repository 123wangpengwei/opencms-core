<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE opencms SYSTEM "http://www.opencms.org/opencms-configuration.dtd">

<opencms>
    <configuration>
        <config class="org.opencms.configuration.CmsVfsConfiguration"/>
        <config class="org.opencms.configuration.CmsWorkplaceConfiguration"/>
        <config class="org.opencms.configuration.CmsImportExportConfiguration"/>
        <config class="org.opencms.configuration.CmsTestConfiguration"/>
    </configuration>  
    <tests>
    	<test name="test1">Hello Test 1</test>    	        	
    	<test name="test2">Hello Test 2</test>    	
    </tests>     
    <vfs>
        <resourceloaders>
            <loader class="com.opencms.legacy.CmsXmlTemplateLoader">            
                <param name="elementcache.enabled">true</param>
            	<param name="elementcache.uri">10000</param>
            	<param name="elementcache.elements">50000</param>
            	<param name="elementcache.variants">100</param>
            </loader>
            <loader class="org.opencms.loader.CmsDumpLoader" />
            <loader class="org.opencms.loader.CmsPointerLoader" />
            <loader class="org.opencms.loader.CmsJspLoader">
            	<param name="jsp.repository">C:\TEMP</param>
            	<param name="jsp.folder">/WEB-INF/jsp/</param>
            	<param name="jsp.errorpage.committed">true</param>
            </loader>
            <loader class="org.opencms.loader.CmsXmlPageLoader" />
        </resourceloaders>    
        <resourcetypes>
            <type class="org.opencms.file.CmsResourceTypeXMLTemplate" />
            <type class="org.opencms.file.CmsResourceTypeFolder" />
            <type class="org.opencms.file.CmsResourceTypePlain">
                <param name="test1">One</param>
            	<param name="test2">Two</param>
            </type>
            <type class="org.opencms.file.CmsResourceTypePointer" />
            <type class="org.opencms.file.CmsResourceTypeBinary" />
            <type class="org.opencms.file.CmsResourceTypeImage" />
            <type class="org.opencms.file.CmsResourceTypeJsp" />
            <type class="org.opencms.file.CmsResourceTypeXmlPage" />
        </resourcetypes>     
        <translations>
        	<filetranslations enabled="true">
        		<translation>s#[\s]+#_#g</translation>
        		<translation>s#\\#/#g</translation>
        		<translation>s#[^0-9a-zA-Z_\.\-\/]#!#g</translation>
        		<translation>s#!+#x#g</translation>
        	</filetranslations>
        	<foldertranslations enabled="false">
        		<translation>s#/default/vfs/content/bodys/(.*)#/system/bodies/$1#</translation>
        		<translation>s#/default/vfs/pics/system/(.*)#/system/workplace/resources/$1#</translation>
        		<translation>s#/default/vfs/pics/(.*)#/system/galleries/pics/$1#</translation>
        		<translation>s#/default/vfs/download/(.*)#/system/galleries/download/$1#</translation>
        		<translation>s#/default/vfs/externallinks/(.*)#/system/galleries/externallinks/$1#</translation>
        		<translation>s#/default/vfs/htmlgalleries/(.*)#/system/galleries/htmlgalleries/$1#</translation>
        		<translation>s#/default/vfs/content/(.*)#/system/modules/org.opencms.default/$1#</translation>
        		<translation>s#/default/vfs/moduledemos/(.*)#/system/moduledemos/$1#</translation>
        		<translation>s#/default/vfs/system/workplace/config/language/(.*)#/system/workplace/locales/$1#</translation>
        		<translation>s#/default/vfs/system/workplace/css/(.*)#/system/workplace/resources/$1#</translation>
        		<translation>s#/default/vfs/system/workplace/templates/js/(.*)#/system/workplace/scripts/$1#</translation>
        	</foldertranslations>
        </translations>
        <versionhistory enabled="true" count="10"/>
    </vfs>   
    <workplace>
    	<defaultlocale>en</defaultlocale>
    	<dialoghandlers>
    		<dialoghandler class="org.opencms.workplace.CmsDelete"/>
    		<dialoghandler class="org.opencms.workplace.CmsLock"/>
    		<dialoghandler class="org.opencms.workplace.CmsProperty"/>
    	</dialoghandlers>
    	<editorhandler class="org.opencms.workplace.editor.CmsEditorHandler"/>
    	<editoraction class="org.opencms.workplace.editor.CmsEditorActionDefault"/>
    	<views>
    		<view key="select.explorer" uri="/system/workplace/jsp/explorer_fs.html" order="10"/>
    		<view key="select.admin" uri="/system/workplace/action/administration.html" order="20"/>
    		<view key="select.tasks" uri="/system/workplace/action/tasks.html" order="30"/>
    	</views>
    	<exportpoints>
    		<exportpoint uri="/system/workplace/resources/" destination="resources/"/>
    		<exportpoint uri="/system/workplace/skins/" destination="skins/"/>
    	</exportpoints>
    	<autolock>true</autolock>
    	<enableusermanagement>true</enableusermanagement>
    	<maxfileuploadsize>-1</maxfileuploadsize>
    	<labledfolders>
    		<resource uri="/system/"/>
    		<resource uri="/system/login/"/>
    	</labledfolders>    	
    </workplace>      
	<importexport>
		<importexporthandlers>
	        <importexporthandler class="com.opencms.legacy.CmsCosImportExportHandler"/>
    	    <importexporthandler class="org.opencms.importexport.CmsVfsImportExportHandler"/>
        	<importexporthandler class="org.opencms.importexport.CmsModuleImportExportHandler"/>
        </importexporthandlers>
        <import>      
        	<overwrite>true</overwrite>        	
        	<convert>true</convert>
        	<oldwebappurl>http://localhost:8080/opencms/opencms/</oldwebappurl>
			<importversions>
				<importversion class="com.opencms.legacy.CmsImportVersion1"/>
				<importversion class="org.opencms.importexport.CmsImportVersion2"/>
				<importversion class="org.opencms.importexport.CmsImportVersion3"/>
				<importversion class="org.opencms.importexport.CmsImportVersion4"/>
			</importversions>          	   	
			<immutables>
				<resource uri="/system/"/>
				<resource uri="/system/bodies/"/>
				<resource uri="/system/galleries/"/>
				<resource uri="/system/galleries/download/"/>
				<resource uri="/system/galleries/externallinks/"/>
				<resource uri="/system/galleries/htmlgalleries/"/>
				<resource uri="/system/galleries/pics/"/>
				<resource uri="/system/login/"/>
				<resource uri="/system/modules/"/>
				<resource uri="/system/shared/"/>
				<resource uri="/system/workplace/"/>
				<resource uri="/system/workplace/action/"/>
				<resource uri="/system/workplace/administration/"/>
				<resource uri="/system/workplace/help/"/>
				<resource uri="/system/workplace/locales/"/>
				<resource uri="/system/workplace/resources/"/>
				<resource uri="/system/workplace/restypes/"/>
				<resource uri="/system/workplace/scripts/"/>
				<resource uri="/system/workplace/templates/"/>
				<resource uri="/channels/"/>
				<resource uri="/sites/"/>
			</immutables>
			<princialtranslations>
				<princialtranslation type="user" from="Admin" to="cmsadmin" />
				<princialtranslation type="group" from="Administrators" to="cmsadministrators" />
			</princialtranslations>
        	<ignoredproperties>
        		<property name="module"/>
        	</ignoredproperties>     			
		</import>
	</importexport>        
</opencms>    