<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:com.extjs.gxt.ui.client.widget"
	xmlns:input="urn:import:org.opencms.gwt.client.ui.input">
	<ui:style>
	@external x-date-picker, x-date-bottom;
		.x-date-picker { /* Overwrite the border values of the gxt date picker. */
			border-color: 0;
			border-right: none;
			border-style: none;
			border-width: 0;
			outline:0 none;
			width: 177px;
		}
		.x-date-bottom{ /* Use the gxt class to format the time panel. */
		}
		.dateTime { /* Align the time panel */
			text-align: center;
			padding: 6px;
		}
		.datePicker { /* Make a border surrounding the whole pciker and time selection. */
			border-style: solid;
			border-width: 1px;
			outline:0 none;
			position:relative;
			background-color:#FFFFFF;
			border-color:#999999;
		}
		.time { /* Format the time input field. */
			width: 50px;
			margin: 3px 6px 3px 3px;
			display: inline-block;
			vertical-align: middle;
		}
		.ampm { /* Format the ampm outer div. */
			margin-right: 3px;
		}
		.ampm div span { /* Make a margin to separate the radiobuttons. */
			margin-right: 1px;
		}
		.err {
			width: 177px;
		}
	</ui:style>

	<g:FlowPanel ui:field="m_dateBoxPanel">
		<input:CmsTextBox ui:field="m_box"></input:CmsTextBox>
		<g:FlowPanel ui:field="m_dateTimePanel" addStyleNames="{style.datePicker}">
			<h:DatePicker ui:field="m_picker"></h:DatePicker>
			<g:FlowPanel addStyleNames="{style.x-date-bottom} {style.dateTime}">
				<input:CmsTextBox ui:field="m_time" addStyleNames="{style.time}"></input:CmsTextBox>
				<input:CmsRadioButton ui:field="m_am" addStyleNames="{style.ampm}"></input:CmsRadioButton>
				<input:CmsRadioButton ui:field="m_pm" addStyleNames="{style.ampm}"></input:CmsRadioButton>
			</g:FlowPanel>
			<input:CmsErrorWidget ui:field="m_timeErr" addStyleNames="{style.err}"></input:CmsErrorWidget>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 
