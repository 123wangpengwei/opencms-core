<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui">
	<ui:with field="istyle" type="org.opencms.gwt.client.ui.css.I_CmsInputLayoutBundle" />
	<ui:style>
		.additionalIcon {
		    float: right;
		    width: 20px;
		    height: 20px; 
		}
	</ui:style>
	<g:FlowPanel styleName="{istyle.inputCss.formRow}">
		<g:Label styleName="{style.additionalIcon}" ui:field="m_icon" />
		<g:Label ui:field="m_label"  styleName="{istyle.inputCss.formLabel}"/>
		<g:SimplePanel ui:field="m_widgetContainer"  styleName="{istyle.inputCss.formWidgetContainer}" />
	</g:FlowPanel>
</ui:UiBinder> 