<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cmsi="urn:import:org.opencms.gwt.client.ui.input"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui"  >
	
	<ui:with field="res" type="org.opencms.ade.publish.client.I_CmsPublishLayoutBundle" />
	<g:FlowPanel styleName="{res.publishCss.selectPanel}">
		<g:FlowPanel ui:field="m_selectorPanel" styleName="{res.publishCss.selectorPanel}">
			<g:InlineLabel ui:field="m_selectorLabel" />
			<cmsi:CmsSelectBox ui:field="m_projectSelector" />
		</g:FlowPanel>
		<g:FlowPanel ui:field="m_topBar" styleName="{res.publishCss.topBar}">
			<g:InlineLabel ui:field = "m_selectLabel" />
		    <cms:CmsTextButton ui:field="m_selectAll" />
		    <cms:CmsTextButton ui:field="m_selectNone" />
		</g:FlowPanel>
		<g:Label ui:field="m_noResources"  styleName="{res.publishCss.noResources}"/>
		<g:ScrollPanel ui:field="m_scrollPanel" styleName="{res.publishCss.scrollPanel}">
			<g:FlowPanel ui:field="m_groupPanel" styleName="{res.publishCss.groupPanel}"></g:FlowPanel>
		</g:ScrollPanel>
		<g:FlowPanel ui:field="m_checkboxPanel" styleName="{res.publishCss.checkboxes}">
			<g:FlowPanel>
				<cmsi:CmsCheckBox ui:field="m_checkboxRelated"></cmsi:CmsCheckBox>
				<g:InlineLabel styleName="{res.publishCss.text}" ui:field="m_relatedLabel"></g:InlineLabel>
			</g:FlowPanel>
			<g:FlowPanel>
				<cmsi:CmsCheckBox ui:field="m_checkboxSiblings"></cmsi:CmsCheckBox>
				<g:InlineLabel styleName="{res.publishCss.text}" ui:field="m_siblingsLabel"></g:InlineLabel>
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel ui:field="m_problemsPanel" styleName="{res.publishCss.problemPanel}" />
		<cms:CmsTextButton ui:field="m_publishButton"></cms:CmsTextButton>
		<cms:CmsTextButton ui:field="m_cancelButton"></cms:CmsTextButton> 
	</g:FlowPanel>
</ui:UiBinder> 