<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui">
	<ui:with field="resources" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	<ui:with field="containerpage" type="org.opencms.ade.containerpage.client.ui.css.I_CmsLayoutBundle"></ui:with>
	<ui:style>
		.buttonPanel{
			text-align: right;
			position: absolute;
			bottom: 0px;
			right: 0px;
		}
		.buttonPanel > div {
			margin-left: 5px;
		}
		.itemList{
			max-height: 385px;
		}
		.description{
			margin-bottom: 4px;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{containerpage.containerpageCss.clipboardTabPanel}">
		<g:Label ui:field="m_decriptionLabel" addStyleNames="{style.description} {resources.generalCss.textBig}"></g:Label>
		<cms:CmsList ui:field="m_listPanel" addStyleNames="{style.itemList} {containerpage.containerpageCss.clipboardList} {resources.generalCss.cornerAll}" />
		<g:FlowPanel ui:field="m_buttonEditingPanel" styleName="{style.buttonPanel}"><cms:CmsPushButton ui:field="m_saveButton" addStyleNames="{resources.buttonCss.cmsMinWidth}" /><cms:CmsPushButton ui:field="m_cancelButton" addStyleNames="{resources.buttonCss.cmsMinWidth}" /></g:FlowPanel>
		<g:FlowPanel ui:field="m_buttonUsePanel" styleName="{style.buttonPanel}"><cms:CmsPushButton ui:field="m_editButton" addStyleNames="{resources.buttonCss.cmsMinWidth}" /></g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 