<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui"
	xmlns:input="urn:import:org.opencms.gwt.client.ui.input"
	xmlns:date="urn:import:org.opencms.gwt.client.ui.input.datebox">
	
	<ui:with field="galleryResources" type="org.opencms.ade.galleries.client.ui.css.I_CmsLayoutBundle" />
	<ui:with field="resources" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	
	<g:HTMLPanel styleName="{galleryResources.galleryDialogCss.tabPanel}">
		<div class="{resources.generalCss.cornerAll} {galleryResources.galleryDialogCss.borderLayer}">
			<g:Label ui:field="m_descriptionLabel" addStyleNames="{resources.generalCss.textBig} {galleryResources.galleryDialogCss.desMargin}"></g:Label>
			<div class="{galleryResources.galleryDialogCss.row}">
				<g:Label ui:field="m_searchLabel"  addStyleNames="{galleryResources.galleryDialogCss.labelLeft}"></g:Label>
				<div class="{galleryResources.galleryDialogCss.inputLeft}">
					<input:CmsTextBox ui:field="m_searchInput" />
				</div>
			</div>
			<div class="{galleryResources.galleryDialogCss.row}">
				<g:Label ui:field="m_dateCreatedStartLabel"  addStyleNames="{galleryResources.galleryDialogCss.labelLeft}"></g:Label>
				<div class="{galleryResources.galleryDialogCss.inputLeft}">
					<date:CmsDateBox ui:field="m_dateCreatedStartDateBox"/>
				</div>
				<div class="{galleryResources.galleryDialogCss.inputRight}">
					<date:CmsDateBox ui:field="m_dateCreatedEndDateBox"/>
				</div>
				<g:Label ui:field="m_dateCreatedEndLabel"  addStyleNames="{galleryResources.galleryDialogCss.labelRight}"></g:Label>
			</div>
			<div class="{galleryResources.galleryDialogCss.row}">
				<g:Label ui:field="m_dateModifiedStartLabel"  addStyleNames="{galleryResources.galleryDialogCss.labelLeft}"></g:Label>
				<div class="{galleryResources.galleryDialogCss.inputLeft}">
					<date:CmsDateBox ui:field="m_dateModifiedStartDateBox"/>
				</div>
				<div class="{galleryResources.galleryDialogCss.inputRight}">
					<date:CmsDateBox ui:field="m_dateModifiedEndDateBox"/>
				</div>
				<g:Label ui:field="m_dateModifiedEndLabel"  addStyleNames="{galleryResources.galleryDialogCss.labelRight}"></g:Label>
			</div>
			<div class="{galleryResources.galleryDialogCss.rowRightAlign}">
				<cms:CmsPushButton ui:field="m_clearButton"></cms:CmsPushButton>
			</div>
		</div>
	</g:HTMLPanel>
	
</ui:UiBinder> 