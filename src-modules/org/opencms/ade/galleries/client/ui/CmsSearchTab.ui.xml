<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cms="urn:import:org.opencms.gwt.client.ui"
	xmlns:input="urn:import:org.opencms.gwt.client.ui.input"
	xmlns:date="urn:import:org.opencms.gwt.client.ui.input.datebox">
	<ui:with field="galleryResources" type="org.opencms.ade.galleries.client.ui.css.I_CmsLayoutBundle" />
	<ui:with field="resources" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	<ui:style>
	@external html-face, dateBoxPopup, popupContent, gwt-DatePicker, datePickerMonthSelector, datePickerMonth, datePickerPreviousButton, datePickerPreviousButton-up-hovering, datePickerPreviousButton-down-hovering, datePickerNextButton, datePickerNextButton-up-hovering, datePickerNextButton-down-hovering, datePickerDays, datePickerWeekdayLabel, datePickerWeekendLabel, datePickerDay, datePickerDayIsToday, datePickerDayIsWeekend, datePickerDayIsFiller, datePickerDayIsValue, datePickerDayIsDisabled, datePickerDayIsHighlighted, datePickerDayIsValueAndHighlighted;
		.row{
			clear: both;
		}
		.label{
			width: 100px;
			float: left;
		}
		.input{
			margin: 0px 20px 10px 20px;
			width:150px;
			float: left;
		}
		.dateField{
			display: inline-block;
		}
		.dateBoxPopup{
			z-index: 21000;
		}
		.dateBoxPopup .popupContent{
			margin: 3px;
			background: #ffffff;
			position: relative;
		}
		.gwt-DatePicker {
			border: #aaaaaa 1px solid;
		}
		.gwt-DatePicker td{
			text-align: center;
		}
		.datePickerMonthSelector { /*the month selector widget*/
			border-bottom: 1px solid #cccccc;
		}
		.datePickerMonth { /*the month in the month selector widget*/ } 
		.datePickerPreviousButton { /*the previous month button*/ 
			cursor: pointer;
			width: 16px;
		} 
		.datePickerNextButton { /*the next month button*/ 
			cursor: pointer;
			width: 16px;
		} 
		.datePickerPreviousButton-up-hovering .html-face, .datePickerPreviousButton-down-hovering .html-face, .datePickerNextButton-up-hovering .html-face, .datePickerNextButton-down-hovering .html-face{
			font-weight: bold;
		}
		.datePickerDays { /*the portion of the picker that shows the days*/}
		.datePickerDays td{ /* the cell for a day */
			padding: 3px;
			font-size: 10px;
		}
		.datePickerWeekdayLabel { /*the label over weekdays*/ }
		.datePickerWeekendLabel { /*the label over weekends*/
			background: #dddddd;
		}
		.datePickerDay { /*a single day*/ 
			cursor: pointer;
		}
		.datePickerDayIsToday { /*today's date*/ 
			color: red;
		}
		.datePickerDayIsWeekend { /*a weekend day*/ 
			background: #dddddd;
		}
		.datePickerDayIsFiller { /*a day in another month*/
			color: #666666;
		}
		.datePickerDayIsValue { /*the selected day*/
			background: #cccccc; 
		}
		.datePickerDayIsDisabled { /*a disabled day*/ }
		.datePickerDayIsHighlighted { /*the currently highlighted day*/ 
			background: #b9b9b9;
		}
		.datePickerDayIsValueAndHighlighted { /*the highlighted day if it is also selected*/ }
	</ui:style>
	<g:HTMLPanel styleName="{galleryResources.galleryDialogCss.tabPanel}">
		<g:Label ui:field="m_descriptionLabel" addStyleNames="{resources.generalCss.textBig}"></g:Label>
		<div class="{style.row}">
			<g:Label ui:field="m_searchLabel"  addStyleNames="{style.label}"></g:Label>
			<div class="{style.input}">
				<input:CmsTextBox ui:field="m_searchInput" />
			</div>
		</div>
		<div class="{style.row}">
			<g:Label ui:field="m_dateCreatedStartLabel"  addStyleNames="{style.label}"></g:Label>
			<div class="{style.input}">
				<date:CmsDateBox ui:field="m_dateCreatedStartDateBox"/>
			</div>
			<g:Label ui:field="m_dateCreatedEndLabel"  addStyleNames="{style.label}"></g:Label>
			<div class="{style.input}">
				<date:CmsDateBox ui:field="m_dateCreatedEndDateBox"/>
			</div>
		</div>
		<div class="{style.row}">
			<g:Label ui:field="m_dateModifiedStartLabel"  addStyleNames="{style.label}"></g:Label>
			<div class="{style.input}">
				<date:CmsDateBox ui:field="m_dateModifiedStartDateBox"/>
			</div>
			<g:Label ui:field="m_dateModifiedEndLabel"  addStyleNames="{style.label}"></g:Label>
			<div class="{style.input}">
				<date:CmsDateBox ui:field="m_dateModifiedEndDateBox"/>
			</div>
		</div>
		<div class="{style.row}">
			<cms:CmsPushButton ui:field="m_clearButton"></cms:CmsPushButton>
		</div>
	</g:HTMLPanel> 
</ui:UiBinder> 